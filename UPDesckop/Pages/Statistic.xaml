<Page x:Class="UPDesckop.Pages.Statistic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UPDesckop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="Statistic">

    <Grid Background="Aqua">
        <Label Content="Статистика" Foreground="Black" FontSize="26" Height="53" VerticalAlignment="Top" HorizontalAlignment="Left" Width="232" Margin="36,10,0,0"/>
        <Label Content="Количество выполненных заявок: " x:Name="lbCout" Foreground="Black" FontSize="14" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="391" Margin="36,88,0,0"/>
        <Label Content="Среднее время выполнения заявки: " x:Name="lbAvarageTime" Foreground="Black" FontSize="14" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="391" Margin="36,128,0,0"/>
        <Label Content="Типы проблем: " x:Name="lbProblems" Foreground="Black" FontSize="14" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="724" Margin="36,168,0,0"/>

        <Button Margin="685,16,10,0" Click="Exit" Height="34" VerticalAlignment="Top" Content="Выйти" Background="White" FontSize="16" />
    </Grid>
</Page>
