<Page x:Class="UPDesckop.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UPDesckop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid Background="Aqua">

        <TextBox x:Name="login" Margin="261,143,261,0" Height="30" VerticalAlignment="Top"/>
        <TextBox x:Name="password" Margin="261,225,261,0" Height="32" VerticalAlignment="Top"/>
        <Button Margin="350,309,350,0" Click="Auth" Height="36" VerticalAlignment="Top" Content="Войти" Background="Gray" FontSize="16" />
        <Label Content="Логин" HorizontalAlignment="Left" Margin="261,101,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="261,178,0,0" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Page>
